<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <!-- Page Wrapper -->
    <div style="background: url(/images/bgimg.jpg)" class="page-holder bg-cover">
        <!-- HEADER START -->
        <div class="container py-5">
            <header class="text-center text-white">
                <h1 class="display-4 font-weight-bold mb-4 page-titles">User Options
            </header>
            <!-- HEADER END -->
            <!-- MAIN CONTENT START -->
            <main div class="text-white vh-auto background-transparency">

                <!-- Go Back and Logout row -->
                <div class="row">
                    <div class="col-6 text-left pl-5">
                        <a href="#" onclick="goBack()">
                            <img src="/images/icon-go-back.png" width="10%" height="auto"><br />
                            Go Back
                        </a>
                    </div>
                    <div class="col-6 text-right pr-5">
                        <p>
                            <a href="/logout">
                                <img src="/images/icon-sign-out.png" width="10%" height="auto"><br />
                                Logout
                            </a>
                        </p>
                    </div>
                </div>

                <div class="container-fluid">
                    <div class="row pt-3">
                        <div class="col-12">
                            <!-- SEARCH RESULTS -->
                            <h3 class="pb-3">User in question</h3>
                            <table class="table table-hover bg-light">
                                <thead>
                                    <tr class="text-center">
                                        <th scope="col">First Name</th>
                                        <th scope="col">Surname</th>
                                        <th scope="col">Phone number</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Date of Birth</th>
                                        <th scope="col">Business Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="text-center">
                                        <th>John</th>
                                        <td>Wick</td>
                                        <td>07712345678</td>
                                        <td>john@wick.com</td>
                                        <td>01/01/1969</td>
                                        <td>Fun with Guns</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="row pt-3">
                        <div class="col-12">
                            <!-- BAN USER -->
                            <h3 class="pb-3">Ban User</h3>

                            <!-- BAN USER -->
                            <table class="table table-borderless bg-light rounded">
                                <thead>
                                    <tr class="text-center">
                                        <th scope="col">Ban User?</th>
                                        <th scope="col">Start from</th>
                                        <th scope="col">End on</th>
                                        <th>Confirm ban</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="text-center">
                                        <th>
                                            <input type="checkbox" class="form-control" id="confirm_ban" placeholder="0"
                                                name="confirm_ban" required>
                                        </th>
                                        <td>
                                            <input type="date" name="start_ban_date" placeholder="select start date">
                                        </td>
                                        <td>
                                            <input type="date" name="end_ban_date" placeholder="select end date">
                                        </td>
                                        <td>
                                            <!-- Button trigger modal -->
                                            <button type="button" class="btn btn-danger" data-toggle="modal"
                                                data-target="#banUser">
                                                BAN USER
                                            </button>

                                            <!-- Modal -->
                                            <div class="modal fade" id="banUser" data-backdrop="static"
                                                data-keyboard="false" tabindex="-1" aria-labelledby="banUserLabel"
                                                aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content text-dark text-monospace">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title w-100 text-center"
                                                                id="banUserLabel">
                                                                <div class="text-danger">
                                                                    Banning User
                                                                </div>
                                                            </h5>
                                                            <button type="button" class="close" data-dismiss="modal"
                                                                aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <p class="text-center">
                                                                Ensure this is the correct action to take before
                                                                confirming ban!
                                                            </p>
                                                            <p class="text-left">
                                                                You are about to ban a user. Are you sure they deserve
                                                                this?
                                                            </p>

                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-success"
                                                                data-dismiss="modal">No, take me back.</button>
                                                            <button type="button" class="btn btn-danger">Yes, ban
                                                                them.</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="row pt-3">
                        <div class="col-12">
                            <!-- DELETE USER -->
                            <h3 class="pb-3">Delete User</h3>
<!-- DELETE USER -->
<table class="table table-borderless bg-light rounded">
    <thead>
        <tr class="text-center">
            <th scope="col">Delete User?</th>
            <th>Confirm Deletion</th>
        </tr>
    </thead>
    <tbody>
        <tr class="text-center">
            <th>
                <input type="checkbox" class="form-control" id="confirm_delete" placeholder="0"
                    name="confirm_delete" required>
            </th>
            <td>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-danger" data-toggle="modal"
                    data-target="#deleteUser">
                    DELETE USER
                </button>

                <!-- Modal -->
                <div class="modal fade" id="deleteUser" data-backdrop="static"
                    data-keyboard="false" tabindex="-1" aria-labelledby="deleteUserLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content text-dark text-monospace">
                            <div class="modal-header">
                                <h5 class="modal-title w-100 text-center"
                                    id="deleteUserLabel">
                                    <div class="text-danger">
                                        Deleting User
                                    </div>
                                </h5>
                                <button type="button" class="close" data-dismiss="modal"
                                    aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p class="text-center">
                                    Deleting a user account is a
                                    <strong>permanent</strong> action.
                                </p>
                                <p class="text-left">Once you delete this account you will never
                                    recover it back!
                                    Are you absolutely sure you wish to delete this user forever?
                                </p>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-success"
                                    data-dismiss="modal">No, take me back.</button>
                                <button type="button" class="btn btn-danger">Yes, delete
                                    them.</button>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    </tbody>
</table>
                        </div>
                    </div>

                </div>
        </div>
    </div>
    </div>
    </div>

    </div>
    </main>
    <!-- MAIN CONTENT END -->
    <%- include('../includes/end.ejs') %>
    </div>
</body>