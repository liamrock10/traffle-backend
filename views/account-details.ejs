<%- include('./includes/head.ejs') %>
</head>

<body>
    <%- include('./includes/navigation.ejs') %>
    <!-- Page Wrapper -->
    <div style="background: url(/images/bgimg.jpg)" class="page-holder bg-cover">
        <!-- HEADER START -->
        <div class="container py-5">
            <header class="text-center text-white">
                <h1 class="display-4 font-weight-bold mb-4 page-titles">Account Details</h1>
            </header>
            <!-- MAIN CONTENT START -->
            <main div class="text-white vh-auto background-transparency">
                <% if (errorMessage) { %>
                <div class="lead text-center pb-3">
                    <p class="notice-text-fail"><%= errorMessage%></p>
                </div>
                <% } %>
                <% if (successMessage) { %>
                <div class="lead text-center pb-3">
                    <p class="notice-text-success"><%= successMessage%></p>
                </div>
                <% } %>
                <!-- Go Back and Logout row -->
                <div class="row">
                    <div class="col-6 pl-5">
                        <a href="#" onclick="goBack()">
                            <img src="/images/icon-go-back.png" width="10%" height="auto"><br />
                            Go Back
                        </a>
                    </div>
                    <div class="col-6 pr-5">
                        <a class="nav-link active text-right" method="post" href="/api/user/logout" type="submit">
                            <img src="/images/icon-sign-out.png" width="10%" height="auto"><br />
                            Logout
                        </a>
                    </div>
                </div>
                <div class="container-fluid pt-3">
                    <form action="/api/user/update-details" method="POST">
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <!-- FIRST NAME -->
                                    <label for="first_name">First Name:</label>
                                    <input type="text" class="form-control" id="first_name"
                                        placeholder="<%= user.first_name %>" value="<%= user.first_name %>"
                                        name="first_name" required>
                                    <div class="valid-feedback">Valid.</div>
                                    <div class="invalid-feedback">Please fill out this field.</div>
                                </div>
                            </div>
                            <div class="col-6 settings-transparency">
                                <div class="form-group">
                                    <!-- CURRENT FIRST NAME -->
                                    <p class="lead">Current First Name: </p>
                                    <p><em><%= user.first_name %></em></p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <!-- SURNAME -->
                                    <label for="last_name">Last Name:</label>
                                    <input type="text" class="form-control" id="last_name"
                                        placeholder="<%= user.last_name %>" value="<%= user.last_name %>"
                                        name="last_name" required>
                                    <div class="valid-feedback">Valid.</div>
                                    <div class="invalid-feedback">Please fill out this field.</div>
                                </div>
                            </div>
                            <div class="col-6 settings-transparency">
                                <div class="form-group">
                                    <!-- CURRENT SURNAME -->
                                    <p class="lead">Current Last Name: </p>
                                    <p><em><%= user.last_name %></em></p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <!-- EMAIL -->
                                    <label for="email">Email:</label>
                                    <input type="text" class="form-control" id="email" placeholder="<%= user.email %>"
                                        value="<%= user.email %>" name="email" required>
                                    <div class="valid-feedback">Valid.</div>
                                    <div class="invalid-feedback">Please fill out this field.</div>
                                </div>
                            </div>
                            <div class="col-6 settings-transparency">
                                <div class="form-group">
                                    <!-- CURRENT EMAIL -->
                                    <p class="lead">Current Email: </p>
                                    <p><em><%= user.email %></em></p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <!-- PHONENUMBER -->
                                    <label for="phone_number">Phone Number:</label>
                                    <input type="text" class="form-control" id="phone_number"
                                        placeholder="<%= user.phone_number %>" value="<%= user.phone_number %>"
                                        name="phone_number" required>
                                    <div class="valid-feedback">Valid.</div>
                                    <div class="invalid-feedback">Please fill out this field.</div>
                                </div>
                            </div>
                            <div class="col-6 settings-transparency">
                                <div class="form-group">
                                    <!-- CURRENT PHONENUMEBR -->
                                    <p class="lead">Current Phone Number: </p>
                                    <p><em><%= user.phone_number %></em></p>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" id="date_of_birth" name="date_of_birth" value="<%= user.date_of_birth %>">
                        <% if (!isAdmin) { %>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <!-- ORG NAME -->
                                    <label for="organisation_name">Organisation Name:</label>
                                    <input type="text" class="form-control" id="organisation_name"
                                        placeholder="<%= user.organisation_name %>"
                                        value="<%= user.organisation_name %>" name="organisation_name" required>
                                    <div class="valid-feedback">Valid.</div>
                                    <div class="invalid-feedback">Please fill out this field.</div>
                                </div>
                            </div>
                            <div class="col-6 settings-transparency">
                                <div class="form-group">
                                    <!-- CURRENT ORG NAME -->
                                    <p class="lead">Current Organisation Name: </p>
                                    <p><em><%= user.organisation_name %></em></p>
                                </div>
                            </div>
                        </div>
                        <% } %>
                        <button type="submit" class="btn btn-success">Update Details</button>
                    </form>
                </div>
            </main>
        </div>
    </div>
    <%- include('./includes/end.ejs') %>
</body>